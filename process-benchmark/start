#!/bin/dash

# see if multiple processes really makes it quicker

root="$(pwd)"

run_benmark () {
    . ../setup-env

    [ -d benchmark-videos ] && rm -r benchmark-videos
    mkdir benchmark-videos
    num_videos=0
    for v in ../videos/*
    do
        base="$(basename "$v")"
        cp "$v" "benchmark-videos/$base"
        cp "$v" "benchmark-videos/${base}-2"
        num_videos=$((num_videos + 2))
    done

    processes=$1

    echo "=== processes=$processes ==="
    cat << EOF > configs/$CONFIG/config.json
{
    "SOURCE": ["benchmark-videos"],
    "RENAMES": ["."],
    "DESTINATION": ["outputs"],

    "TESTING": true,
    "RECENT": ${RECENT:-false},

    "NUM_PROCESSES": $processes
}
EOF

    # all videos are at least 1 minute long
    seq $num_videos \
        | sed -E -e 's/.*/m 1 60 video &/' -e '$a \
q' \
        | python3 -m mve log viewer $CONFIG

    # ffmpeg sends output to err /dev/null
    # time python3 -m mve log treater $CONFIG 2>/dev/null
    time python3 -m mve log treater $CONFIG

    cd "$root"
}

run_benmark 4
run_benmark 8
