#!/usr/bin/env dash

echo 'creating virtual environment'
[ -d .venv ] && rm -r .venv
python3 -m venv .venv
. .venv/bin/activate
good_install=yes
pip3 install -r requirements.txt || good_install=no
deactivate

[ $good_install = yes ] || exit 10

echo 'generating testing videos'
./make-videos

echo 'sucessfully set up testing environment'
