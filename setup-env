#!/bin/dash

export CONFIG=testing
export MVE_CONFIGS='../configs'

root="$(pwd)"

[ -d configs ] && rm -r configs
mkdir configs

[ -d outputs ] && rm -r outputs
mkdir outputs

cd configs
mkdir $CONFIG
cd $CONFIG
for dir in errors history queue
do
    mkdir $dir
done
echo '[]' > remaining.json
cat << EOF > config.json
{
    "SOURCE": ["..", "..", "videos"],
    "RENAMES": [".."],
    "DESTINATION": ["..", "outputs"],

    "TESTING": true,
    "RECENT": false
}
EOF
cd ../..

cp -r ../../mve/src .
cd src
python3 generator.py $CONFIG > /dev/null
cd "$root"
