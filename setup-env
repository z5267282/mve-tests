#!/bin/dash

if [ ! -d ../../mve/mve ]
then
    echo "$(basename $0) failed because ../../mve/mve doesn't exist"
    echo "the mve project folder must exist in the parent of mve-tests"
    exit 15
fi
[ -d mve ] && rm -rf mve
cp -r ../../mve/mve .

export CONFIG=testing
export MVE_CONFIGS='configs'

# let us run scripts in current folder
export PATH="$PATH:."

root="$(pwd)"

[ -d configs ] && rm -r configs
mkdir configs

[ -d outputs ] && rm -r outputs
mkdir outputs

cd configs
mkdir $CONFIG
cd $CONFIG
for dir in errors history queue
do
    mkdir $dir
    # add a gitkeep to reflect mve
    touch $dir/.gitkeep
done
echo '[]' > remaining.json
cat << EOF > config.json
{
    "SOURCE": ["..", "videos"],
    "RENAMES": [".."],
    "DESTINATION": ["outputs"],

    "TESTING": true,
    "RECENT": ${RECENT:-false}
}
EOF
cd ../..

python3 -m mve log generator $CONFIG > /dev/null
cd "$root"
